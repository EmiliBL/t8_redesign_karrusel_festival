---
import MainLayout from "../layouts/MainLayout.astro";

---

<MainLayout>
  <div class="hero_img">
    <img src="website_fotos/volunteer1.webp" alt="Volunteer">
</div>
<div class="text_boks">
    <h1>Volunteer</h1>
    <p class="p_default"> Want to join our voluntary community?</p>
    <p class="p_default"> We are so happy that you are interested in becoming a volunteer at Karrusel Festival 2025!
        You
        just have to fill in this form - and we will contact you, as soon as we open for volunteer registrations.
    </p>
    <p class="p_semibold_20px">As a volunteer you will get;</p>
    <ul>
        <li>Free beer</li>
        <li>Free access</li>
        <li>Cool merge</li>
        <li>No sleep</li>
    </ul>
</div>
<form>
    <h2>Apply here</h2>

    <div class="form_indhold">
        <div class="form-group">
            <label for="fname">Your name</label>
            <input type="text" id="fname" name="fname" placeholder="Write name here">
        </div>

        <div class="form-group">
            <label for="email">Your email</label>
            <input type="email" id="email" name="email" placeholder="Write email here">
        </div>

        <div class="form-group">
            <label for="number">Your phone number</label>
            <input type="tel" id="number" name="number" placeholder="Number to contact you on">
        </div>

        <div class="form-group">
            <label for="age">Your age</label>
            <input type="number" id="age" name="age" placeholder="+18">
        </div>

        <div class="form-group">
            <label for="message">Tell us about yourself</label>
            <textarea id="message" name="message" placeholder="Message"></textarea>
        </div>
    </div>

    <div class="checkbox-group">
        <input type="checkbox" id="checkbox" name="terms" value="terms">
        <label for="checkbox"> Terms & Conditions</label>
    </div>

    <input type="submit" value="Apply">
</form>
</MainLayout>

<style>
  * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html,
body {
  height: 100%;
}

.hero_img {
  background: center / cover no-repeat; /* Billedet dækker hele containeren */
  height: 583px;
  opacity: 80%;
}

.p_default,
.p_semibold_20px {
  margin: 10px 0; /* Tilføjer lidt afstand mellem paragrafer */
}

.text_boks {
  color: var(--secondary-color);
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* Corrected from first baseline to flex-start */
  justify-content: flex-start;
  text-align: left;
  position: relative; /* For at kunne placere tekst over billedet */
  opacity: 100%;
  margin-top: -28%;
  margin-left: 173px; /* Consider adjusting this for mobile */
}

h1 {
  font-family: "glodok", sans-serif;
  font-size: 70px;
}

h2 {
  font-size: 43px;
}

li {
  font-family: "Prompt", sans-serif;
  font-size: 16px;
  color: var(--secondary-color);
  line-height: 1.78; /* Use unitless value for better scaling */
}

.p_default {
  margin-right: 573px; /* Consider revising or removing for mobile */
}

/* ************Form */
body {
  font-family: "Prompt", sans-serif;
  background-color: var(--secondary-color);
  padding: 20px;
}

form {
  border-radius: 20px;
  background: rgba(255, 255, 255, 0.19);
  backdrop-filter: blur(7.5px);
  max-width: 962px;
  margin: 3% auto 0 250px; /* Adjusted for centering */
  padding: 2%;
}

.form_indhold {
  display: flex;
  flex-wrap: wrap; /* Allow wrapping for two columns */
}

.form-group {
  flex: 1 1 45%; /* Allow columns to take up to 45% of the width */
  min-width: 250px; /* Minimum width for responsiveness */
  padding: 10px; /* Add some padding between elements */
}

label {
  display: block; /* Ensures label takes a new line */
  margin-bottom: 5px; /* Space below the label */
}

input[type="text"],
input[type="email"],
input[type="tel"],
input[type="number"],
textarea {
  width: 100%;
  padding: 10px;
  margin: 8px 0; /* Adjust margin for better spacing */
  border-radius: 20px; /* Match the existing rounded style */
}

textarea {
  height: 100px; /* Adjusted height for better appearance */
}

.checkbox-group {
  display: flex; /* Use flexbox for alignment */
  align-items: center; /* Vertically center align the checkbox and label */
  margin: 10px 0; /* Space above and below the checkbox group */
}

input[type="checkbox"] {
  margin-right: 5px; /* Space between checkbox and label */
}

input[type="submit"] {
  display: flex;
  width: 130px;
  padding: 10px;
  justify-content: center;
  align-items: center;
  gap: 10px;
  border-radius: 1000px;
  border: 1px solid var(--secondary-color);
  color: var(--secondary-color);
  background-color: transparent;
}

input[type="submit"]:hover {
  background-color: #73fa46;
}

.detmedsmåt {
  display: flex;
  width: 130px;
  padding: 10px;
  justify-content: center;
  align-items: center;
}

/* Responsive Styles */
@media (max-width: 768px) {
  .form_indhold {
    flex-direction: column; /* Stack form groups vertically */
  }

  .form-group {
    flex: 1 1 100%; /* Take full width on mobile */
    min-width: 100%; /* Ensure full width */
    padding: 0; /* Optional: Adjust padding as needed */
  }

  .text_boks {
    margin-left: 0; /* Center the text box on mobile */
  }

  form {
    margin-left: 0; /* Center the form on mobile */
    padding: 10px; /* Adjust padding for mobile */
  }

  .text_boks {
    position: absolute; /* Position text on top of the image */
    top: 20%; /* Adjust this value as needed */
    left: 5%; /* Adjust this value as needed */
    right: 5%; /* Add padding to the right */
    text-align: left; /* Center text for mobile */
    margin: 0; /* Reset margin for better alignment */
  }

  h1 {
    font-size: 40px; /* Adjust heading size for mobile */
  }

  h2 {
    font-size: 30px; /* Adjust subheading size for mobile */
  }

  .p_default {
    margin-right: 16px;
    font-size: 16px;
    font-family: "Prompt", sans-serif;
  }

  li {
    font-family: "Prompt", sans-serif;
    font-size: 14px;
    color: var(--secondary-color);
    line-height: 1.78; /* Use unitless value for better scaling */
  }

  .hero_img {
    background: center / cover; /* Billedet dækker hele containeren */
    height: 540px;
    opacity: 80%;
  }
}

</style>