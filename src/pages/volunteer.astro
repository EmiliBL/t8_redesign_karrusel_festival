---
import MainLayout from "../layouts/MainLayout.astro"

import VolunteerForm from "../components/VolunteerForm.astro"
---

<MainLayout>

  <div class="hero_img">
    <img src="website_fotos/volunteer1.webp" alt="Volunteer">
</div>
<div class="text_boks">
    <h1>Volunteer</h1>
    <p class="p_default"> Want to join our voluntary community?</p>
    <p class="p_default"> We are so happy that you are interested in becoming a volunteer at Karrusel Festival 2025!
        You
        just have to fill in this form - and we will contact you, as soon as we open for volunteer registrations.
    </p>
    <p class="p_semibold_20px">As a volunteer you will get;</p>
    <ul>
        <li>Free beer</li>
        <li>Free access</li>
        <li>Cool merge</li>
        <li>No sleep</li>
    </ul>
</div>
<form>
<VolunteerForm/>
</form>
</MainLayout>

<style>
  * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html,
body {
  height: 100%;
}

.hero_img {
  background: center / cover no-repeat;
  height: 100vh; /* Make it fill the full viewport height */
  width: 100%; /* Full width */
  opacity: 80%;
  position: relative; /* For absolute positioning of text_boks */
}

.text_boks {
  position: absolute; /* Position text over the image */
  top: 20%; /* Adjust as needed */
  left: 5%; /* Adjust as needed */
  right: 5%; /* Add padding to the right */
  color: var(--secondary-color);
  text-align: left;
  margin: 0; /* Reset margins */
}

.p_default,
.p_semibold_20px {
  margin: 10px 0; 
}


h1 {
  font-family: "glodok", sans-serif;
  font-size: 70px;
}

h2 {
  font-size: 43px;
}

li {
  font-family: "Prompt", sans-serif;
  font-size: 16px;
  color: var(--secondary-color);
  line-height: 1.78; /* Use unitless value for better scaling */
}

.p_default {
  margin-right: 573px; /* Consider revising or removing for mobile */
}

/* ************Form **********************/
body {
  font-family: "Prompt", sans-serif;
  background-color: var(--secondary-color);
  margin-left: 16px;
  margin-right: 16px;
}

form {
  border-radius: 20px;
  background: rgba(255, 255, 255, 0.19);
  backdrop-filter: blur(7.5px);
  max-width: 962px;
  margin: 3% auto 0 250px; /* Adjusted for centering */
  padding: 2%;
}

.form_indhold {
  display: flex;
  flex-wrap: wrap; /* Allow wrapping for two columns */
}

.form-group {
  flex: 1 1 45%; /* Allow columns to take up to 45% of the width */
  min-width: 250px; /* Minimum width for responsiveness */
  padding: 10px; /* Add some padding between elements */
}

label {
  display: block; /* Ensures label takes a new line */
  margin-bottom: 5px; /* Space below the label */
}

input[type="text"],
input[type="email"],
input[type="tel"],
input[type="number"],
textarea {
  width: 100%;
  padding: 10px;
  margin: 8px 0; 
  border-radius: 20px; 
}

textarea {
  height: 100px; 
}

.checkbox-group {
  display: flex; 
  align-items: center; 
  margin: 10px 0;
}

input[type="checkbox"] {
  margin-right: 5px; 
}

input[type="submit"] {
  display: flex;
  width: 130px;
  padding: 10px;
  justify-content: center;
  align-items: center;
  gap: 10px;
  border-radius: 1000px;
  border: 1px solid var(--secondary-color);
  color: var(--secondary-color);
  background-color: transparent;
}

input[type="submit"]:hover {
  background-color: #73fa46;
}

.detmedsmåt {
  display: flex;
  width: 130px;
  padding: 10px;
  justify-content: center;
  align-items: center;
}

/* Responsive Styles */
@media (max-width: 768px) {
  .form_indhold {
    flex-direction: column; /* Stack form groups vertically */
  }

  .hero_img {
    background: center / cover no-repeat; /* Ensure it covers fully */
    height: 100vh; /* Make sure it adjusts to the full height */
    width: 100%;
  }

 

  h1 {
    font-size: 32px; /* Adjust heading size for mobile */
  }

  .p_default,
  li {
    font-size: 14px; /* Smaller text for mobile */
  }

  .form-group {
    flex: 1 1 100%; /* Take full width on mobile */
    min-width: 100%; /* Ensure full width */
    padding: 0; /* Optional: Adjust padding as needed */
  }

  .text_boks {
    margin-left: 0; /* Center the text box on mobile */
  }

  form {
    margin-left: 0; /* Center the form on mobile */
    padding: 10px; /* Adjust padding for mobile */
  }

  .text_boks {
    position: absolute; /* Position text on top of the image */
    top: 20%; /* Adjust this value as needed */
    left: 5%; /* Adjust this value as needed */
    right: 5%; /* Add padding to the right */
    text-align: left; /* Center text for mobile */
    margin: 0; /* Reset margin for better alignment */
  }

  h1 {
    font-size: 40px; /* Adjust heading size for mobile */
  }

  h2 {
    font-size: 30px; /* Adjust subheading size for mobile */
  }

  .p_default {
    margin-right: 16px;
    font-size: 16px;
    font-family: "Prompt", sans-serif;
  }

  li {
    font-family: "Prompt", sans-serif;
    font-size: 14px;
    color: var(--secondary-color);
    line-height: 1.78; /* Use unitless value for better scaling */
  }

  .hero_img {
    background: center / cover; /* Billedet dækker hele containeren */
    height: 540px;
    opacity: 80%;
  }
}

</style>