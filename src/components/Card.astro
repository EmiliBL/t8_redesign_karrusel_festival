---
const { data } = Astro.props;
console.log(data);
---

<li class="glas_boks">
  <div class="img_container">
    <img src={`/image/${data.image}`} alt={data.artist} />
  </div>
  <a href={"/artists/" + data.slug}>{data.artist}</a>
  <p>{data.description}</p>
</li>

<style>
  a {
    font-family: "glodok", sans-serif;
    font-size: 26px;
    color: white;
    text-decoration: none;
  }
  .glas_boks {
    padding: 15px;
    border-radius: 35px;
    background: rgba(255, 255, 255, 0.19);
    backdrop-filter: blur(7.5px);
    text-align: left;
  }

  .img_container {
    width: 100%;
    height: 400px;
  }

  img {
    border-radius: 30px;
    height: 100%;
    object-fit: cover;
  }
  /* Stil for teksten */
  .p_big {
    font-size: 1.2rem;
    line-height: 1.5;
  }

  h1 {
    font-family: "glodok", sans-serif;
    font-size: 70px;
  }

  /* ************MOBIL */
  @media (max-width: 768px) {
    .grid-container {
      grid-template-columns: 1fr;
      margin: 16px;
    }

    .img_section {
      margin-bottom: 8px;
      width: 100%;
      height: auto;
    }

    img {
      width: 100%;
    }

    h3 {
      font-size: 23px;
    }

    h1 {
      font-size: 43px;
    }
  }
</style>
