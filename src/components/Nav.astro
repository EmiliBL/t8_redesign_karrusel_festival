---
import BurgerMenu from "../components/BurgerMenu.astro";
import BuyTickets from "../components/BuyTickets.astro";
---

<nav>
  <a href="/" aria-label="Home">
  <img src="../public/website_fotos/logowhite.png" alt="Logo" />
</a>


  <div class="lefti">
    <BuyTickets />
    <div class="burger-container">
      <BurgerMenu />
      <div class="dropdown-menu" id="dropdownMenu">
        <a class="aref" href="../artists">Artists</a>
        <a class="aref" href="../information">Information</a>
        <a class="aref" href="../volunteer">Volunteer</a>
        <a class="aref" href="../gallery">Gallery</a>
      </div>
    </div>
  </div>
</nav>

<style>
  nav {
    display: flex;
    justify-content: space-between;
    padding: 20px;
    align-items: center;
  }
  img {
    width: 74px;
    height: auto;
  }
  .burger-container {
    position: relative;
    padding-left: 50px;
  }
  .dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    right: 0;
    border-radius: 20px;
    background: rgba(255, 255, 255, 0.19);
    backdrop-filter: blur(7.5px);
    width: auto;
    height: 400px;
    padding: 40px;
    margin-top: 10px;
    z-index: 1;
  }
  .dropdown-menu a {
    display: block;
    /* padding: 12px 16px; */
    text-decoration: none;
    color: black;
    text-align: center;
  }
  .dropdown-menu a:hover {
    color: #f9f9f9;
  }
  .aref {
    font-family: "Prompt", sans-serif;
    font-size: 40px;
    color: var(--primary-color);
    line-height: 200%;
  }
  .lefti {
    display: flex;
  }
  @media (max-width: 400px) {
    img {
      width: 48px;
      height: auto;
      margin-left: 40px;
    }
    .burger-container {
      position: relative;
      padding-left: 25px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const burgerMenu = document.querySelector(".burger-menu");
    const dropdownMenu = document.getElementById("dropdownMenu");

    burgerMenu.addEventListener("click", () => {
      dropdownMenu.style.display = dropdownMenu.style.display === "block" ? "none" : "block";
    });
  });
</script>
